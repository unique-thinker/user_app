<h1>Users</h1>
<li><%= notice %></li>
<%= link_to 'New User', new_user_path %>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Mobile Number</th>
    <th>Gender</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.gender %></td>
      <td>
        <%= link_to 'Show', user %>
        <%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Delete', user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
